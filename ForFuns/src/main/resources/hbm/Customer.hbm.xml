<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<query name="CustomerqueryisExist">  
        <![CDATA[from Customer where userid=:userid and password=:password]]>
	</query>
	
	<query name="CustomerquerycountCustomer">  
        <![CDATA[select count(id) from Customer as user]]>
	</query>
	
	<query name="Customerqueryexist">  
        <![CDATA[from Customer where userid=:userid]]>
	</query>
	
	<query name="CustomerquerygetIdbyUserid">  
        <![CDATA[select id from Customer where userid=:userid]]>
	</query>
</hibernate-mapping>  