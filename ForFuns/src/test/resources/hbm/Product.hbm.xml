<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>

	<query name="ProductqueryGetOnlineProduct">  
        <![CDATA[select temp from Product temp inner join temp.productType type  where temp.productSell.sellMethod.id = :methodid and type.id=:typeid and ( situation = 1 or situation = 0 )]]>
	</query>
	 
